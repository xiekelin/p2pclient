<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="180dp"
    android:background="@drawable/dialog_2"
    android:orientation="vertical"
    android:id="@+id/promptBox">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="35dp">
        <TextView android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/showText"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center" android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" android:gravity="center_horizontal">

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="确定"
            android:background="@drawable/btn_empty"
            android:id="@+id/promptBoxConfirm" android:layout_gravity="center" android:textStyle="bold"
            android:textColor="#cce6ec" android:textSize="20dp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="取消"
            android:background="@drawable/btn_empty"
            android:id="@+id/promptBoxCancel" android:layout_gravity="center" android:textStyle="bold"
            android:textColor="#cce6ec" android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>